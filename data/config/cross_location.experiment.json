{
  "version": "0.0.1",
  "name": "cross_location",
  "run_id": null,
  "description": "EXTENSION of 'Spatial Gated Multi-Layer Perceptron for Land Use and Land Cover Mapping'",
  "out_dir": null,
  "mlflow_uri": null,
  "datasets": [
    {
      "name": "augsburg",
      "base_dir": "./data/Datasets/HS-SAR-DSM Augsburg",
      "feature_files": [
          "data_DSM.mat",
          "data_HS_LR.mat",
          "data_SAR_HR.mat"
      ],
      "labels_file": "TrainImage.mat",
      "labels_file_test": "TestImage.mat",
      "na_label": 0,
      "preprocessing": [
        {"pca": ["data_HS_LR"]}
      ]
    },
    {
      "name": "berlin",
      "base_dir": "data/Datasets/HS-SAR Berlin",
      "feature_files": [
          "data_HS_LR.mat",
          "data_SAR_HR.mat"
      ],
      "labels_file": "TrainImage.mat",
      "labels_file_test": "TestImage.mat",
      "na_label": 0,
      "preprocessing": [
          {"pca": ["data_HS_LR"]}
      ]
    }
  ],
  "training": {
    "seed": 271828182,
    "type": "train_test",
    "train_percentage": 0.8,
    "batch_size": 256,
    "epochs": 30,
    "early_stopping": false
  },
  "model": {
    "class_name": "litsgumlpmixer",
    "args": {
      "token_features": 256,
      "mixer_features_channel": 256,
      "mixer_features_sequence": 256,
      "dwc_kernels": [1, 3, 5],
      "embedding_kernel_size": 4,
      "num_blocks": 1,
      "activation": "gelu",
      "residual_weight": 2,
      "learnable_residual": false,
      "dropout": 0.4
    }
  },
  "optimizer": {
    "class_name": "adamw",
    "args": {
      "lr": 0.001,
      "weight_decay": 0.0001
    }
  },
  "metrics": {
    "train": [
      "accuracy"
    ],
    "test": [
      "accuracy",
      "precision",
      "recall",
      "f1_score"
    ]
  }
}